<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paramail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryVariant">?colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_400</item>
        <item name="colorSecondaryVariant">?colorSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_900</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSwipeAction">@color/white</item>
        <item name="colorArchiveAction">@color/orange</item>
        <item name="colorSpamAction">@color/red</item>
        <item name="colorIncompleteAction">@color/gray</item>

        <item name="enterAnim">@anim/slide_right_to_left</item>
        <item name="exitAnim">@anim/slide_left_to_offscreen</item>
        <item name="popEnterAnim">@anim/slide_offscreen_to_left</item>
        <item name="popExitAnim">@anim/slide_left_to_right</item>

        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Paramail.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Paramail.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>